{% extends('common/base_input.twig') %}
{% import 'parts/form.twig' as form %}

{% block title %}
	{{ form.form_title("配信宛先"~value) }}
{% endblock %}

{% block inputform %}
	<dl>
		<dt>{{ form.set_col("会社名", 1) }}</dt>
		<dd>{{ form.input("dest_company_name", dest_company_name, "text", "", "", 50) }}</dd>
		<dt>{{ form.set_col("宛先名", 1) }}</dt>
		<dd>{{ form.input("dest_name", dest_name, "text", "", "", 50) }}</dd>
		<dt>{{ form.set_col("メールアドレス", 1) }}</dt>
		<dd>{{ form.input("mail_address", mail_address, "text", "", "", 50) }}</dd>
		<dt>{{ form.set_col("除外送信グループ") }}</dt>
		<dd>{{ form_select('exclude_group_id', exclude_group_map, exclude_group_id)|raw }}</dd>
	</dl>
{% endblock %}