{% block main %}

	{{ form.form_title("詳細") }}
	
	<div class="event-content">
		<h4><i class="fa" aria-hidden="true"></i>会社名</h4>
		<p>{{ dest_company_name }}</p>
	</div>
	
	<div class="event-content">
		<h4><i class="fa" aria-hidden="true"></i>宛先名</h4>
		<p>{{ dest_name }}</p>
	</div>
	
	<div class="event-content">
		<h4><i class="fa" aria-hidden="true"></i>メールアドレス</h4>
		<p>{{ mail_address }}</p>
	</div>
	
	<div class="event-content">
		<h4><i class="fa" aria-hidden="true"></i>除外グループ</h4>
		<p>{{ exclude_group_id }}</p>
	</div>
	
	</div>
	
	{{ form.input_button("popup-close", "閉じる", "", "btn_return", "window.close(); return false;") }}

