{% extends('common/base_detail.twig') %}
{% import 'parts/form.twig' as form %}
{% import 'parts/main_body.twig' as main %}

{% block main %}

	{{ form.form_title("詳細") }}
	
	<div class="event-content">
		<h4><i class="fa" aria-hidden="true"></i>配信タイプ</h4>
		<p>{{ send_type }}</p>
	</div>
	
	<div class="event-content">
		<h4><i class="fa" aria-hidden="true"></i>配信時間</h4>
		<p>{{ send_time|date('Y年n月j日 H:i') }}</p>
	</div>
	
	<div class="event-content">
		<h4><i class="fa" aria-hidden="true"></i>配信者</h4>
		<p>{{ sender_id }}</p>
	</div>
	
	{% if type == '1' %}
		<div class="event-content">
			<h4><i class="fa" aria-hidden="true"></i>除外グループ名</h4>
			<p>{{ exclude_group_id }}</p>
		</div>
	{% elseif type == '2' %}
		<div class="event-content">
			<h4><i class="fa" aria-hidden="true"></i>宛先</h4>
			<p>{{ mail_dest_id }}</p>
		</div>
	{% endif %}
	
	<div class="event-content">
		<h4><i class="fa" aria-hidden="true"></i>件名</h4>
		<p>{{ subject }}</p>
	</div>
	
	<div class="event-content">
		<h4><i class="fa" aria-hidden="true"></i>本文</h4>
		<p>{{ discription|nl2br }}</p>
	</div>
	
	<p class="action">
		<input type="button" class="btn_regist" value="参照配信" onclick="sub_redirect('{{ base_url }}', '{{ refer_path }}', 'refer', '{{ id }}');">
	</p>
	
	</div>
	
	{{ main.return_top(base_url) }}
	
{% endblock %}